@model  TaskMgr.ViewModels.StepsVM

@if (this.ViewContext.FormContext == null)
{
    this.ViewContext.FormContext = new FormContext();
}

<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" id="ErrorSummary" class="text-danger"></div>
            <input type="hidden" asp-for="StepId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class" class="control-label"></label>
                <!--<select asp-for="ClassName" asp-items="Model.AvailableClasses" class="form-control"/>-->
                @Html.DropDownListFor(model => model.Class, new SelectList(Model.AvailableClasses, "Value", "Text"), new { @class = "form-control" })
                <span asp-validation-for="Class" class="text-danger"></span>
        </div>

            <div class="form-group">
                <button class="btn btn-sm btn-primary" id="saveButton" onclick="Save(event)">Save</button>
                <button class="btn btn-sm btn-danger" id="cancelButton" onclick="Cancel(event)">Cancel</button>
            </div>
        </form>

    </div>
</div>